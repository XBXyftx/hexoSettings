#footer-wrap
  if theme.footer.owner.enable
    - const currentYear = new Date().getFullYear()
    - const sinceYear = theme.footer.owner.since
    .copyright
      if sinceYear && sinceYear != currentYear
        != `&copy;${sinceYear} - ${currentYear} By ${config.author}`
      else
        != `&copy;${currentYear} By ${config.author}`
  if theme.footer.copyright
    .framework-info
      span= _p('footer.framework') + ' '
      a(href='https://hexo.io')= 'Hexo'
      span.footer-separator |
      span= _p('footer.theme') + ' '
      a(href='https://github.com/jerryc127/hexo-theme-butterfly')= 'Butterfly'
  if theme.footer.custom_text
    .footer_custom_text!= theme.footer.custom_text
  if theme.mermaid.enable == true
    script(type='text/javascript', src='https://unpkg.com/mermaid@' + theme.mermaid.version + '/dist/mermaid.min.js', id='maid-script', 'mermaid-options'=theme.mermaid.options)
    script.
      if (window.mermaid) {
        var options = JSON.parse(document.getElementById('maid-script').getAttribute('mermaid-options'));
        mermaid.initialize(options);
      }
  div
  span#timeDate 载入天数...
  span#times 载入时分秒...
  script.
      var now = new Date(); 
      function createtime() { 
      var grt = new Date("1/24/2025 02:23"); // 在此处修改你的建站时间
      now.setTime(now.getTime() + 250); 
      days = (now - grt) / 1000 / 60 / 60 / 24; 
      dnum = Math.floor(days); 
      hours = (now - grt) / 1000 / 60 / 60 - (24 * dnum); 
      hnum = Math.floor(hours); 
      if (String(hnum).length == 1) { hnum = "0" + hnum; } 
      minutes = (now - grt) / 1000 / 60 - (24 * 60 * dnum) - (60 * hnum); 
      mnum = Math.floor(minutes); 
      if (String(mnum).length == 1) { mnum = "0" + mnum; } 
      seconds = (now - grt) / 1000 - (24 * 60 * 60 * dnum) - (60 * 60 * hnum) - (60 * mnum); 
      snum = Math.round(seconds); 
      if (String(snum).length == 1) { snum = "0" + snum; } 
      document.getElementById("timeDate").innerHTML = "本网站已运行 " + dnum + " 天 "; 
      document.getElementById("times").innerHTML = hnum + " 小时 " + mnum + " 分 " + snum + " 秒"; 
      } 
      setInterval(createtime, 250);